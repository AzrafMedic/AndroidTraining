<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="jp.mixi.sample.actionbar.sherlock">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="17"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/Theme.Sherlock.Light">

        <!-- ActionBarSherlock の theme を使用するようにする -->
        <activity android:label="@string/app_name" android:name="jp.mixi.sample.actionbar.sherlock.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- Split ActionBar を実現するための属性指定 -->
        <activity android:label="@string/app_name" android:name="jp.mixi.sample.actionbar.sherlock.SherlockListNavigationActivity" android:uiOptions="splitActionBarWhenNarrow">
        </activity>
        <activity android:label="@string/app_name" android:name="jp.mixi.sample.actionbar.sherlock.SherlockTabNavigationActivity">
        </activity>
        <activity android:label="@string/app_name" android:name="jp.mixi.sample.actionbar.sherlock.SherlockStandardNavigationActivity">
        </activity>
    </application>

</manifest>
